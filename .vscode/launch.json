{
    "configurations": [
        {
            "command": "npx cds bind --exec mvn spring-boot:run",
            "name": "cds bind hybrid",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "type": "java",
            "name": "Spring Boot-Application<capgrafana>",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "mainClass": "customer.capgrafana.Application",
            "projectName": "capgrafana",
            "preLaunchTask": "cds_bind",
            "env": {
                "JAVA_TOOL_OPTIONS" :  "-javaagent:srv\\src\\main\\resources\\opentelemetry-javaagent.jar",
                "OTEL_SERVICE_NAME" : "otel-service",
                "OTEL_TRACES_EXPORTER" : "console",
                "OTEL_METRICS_EXPORTER" : "console",
                "OTEL_LOGS_EXPORTER" : "console"
            }
        },
        {
            "name": "Launch Approuter",
            "program": "${workspaceFolder}/app/router/node_modules/@sap/approuter/approuter.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "localRoot": "${workspaceFolder}/app/router",
            "env": {
                "CF_NODEJS_LOGGING_LEVEL": "debug",
                "XS_APP_LOG_LEVEL": "debug",
                "destinations": "[{\"name\":\"srv-api\",\"url\":\"http://localhost:8080\",\"forwardAuthToken\":true,\"strictSSL\":false}]"
            }
        },
    ],
    "compounds": [
        {
            "name": "Start Full App (Spring Boot + Approuter)",
            "configurations": [
                "Spring Boot-Application<capgrafana>",
                "Launch Approuter"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "Full Stack",
                "order": 1
            }
        }
    ]
}